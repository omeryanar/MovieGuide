<MudLink Underline="Underline.None" Href="@($"tv/{TvShow.Id}/season/{Season.SeasonNumber}")">
    <MudCard Class="media-card" Elevation="3">
        <MudImage Class="rounded-t media-card-img" Src="@Season.PosterFullPath" />
        <MudCardContent Class="pt-0 px-3">
            <MudText Typo="Typo.h5">@Season.Name</MudText>
            <MudText Typo="Typo.h6" Class="@(Season.EpisodeCount == 0 ? "d-none" : "")">@String.Format(Resources.SeasonEpisodes, Season.EpisodeCount)</MudText>
            <MudText Typo="Typo.h6">@Season.AirDate?.ToString("MMM d, yyyy")</MudText>
        </MudCardContent>
    </MudCard>
</MudLink>

@code
{
    [Parameter]
    public TvShow TvShow { get; set; }

    [Parameter]
    public SearchTvSeason Season { get; set; }
}
