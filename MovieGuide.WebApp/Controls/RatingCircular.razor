@namespace MovieGuide.WebApp.Controls
@inherits MudComponentBase

<div @attributes="UserAttributes" class="@DivClassname" role="progressbar" style="@Style" aria-valuenow="@Value">
    <svg viewBox="0 0 240 240" transform="rotate(-90)">
        <circle cx="120" cy="120" r="120" fill="black" />
        <circle cx="120" cy="120" r="95" fill="none" stroke-width="15px" style="stroke: currentColor; stroke-opacity: 0.3" />
        <circle cx="120" cy="120" r="95" fill="none" stroke-width="15px" style="stroke-dasharray:600; stroke-dashoffset:calc(600 - (6 * @Value));" class="@SvgClassname" />
        <text x="120" y="120" text-anchor="middle" dominant-baseline="central" fill="currentColor" font-family="Roboto" font-weight="600" font-size="6.5em" transform="rotate(90 120 120)">@rating</text>
    </svg>
</div>