<MudLink Underline="Underline.None" Href="@($"tv/{TvShow.Id}/season/{Episode.SeasonNumber}/episode/{Episode.EpisodeNumber}")">
    <MudPaper Elevation="3">
        <MudStack Row="true" Spacing="0">
            <MudImage Class="rounded-l" Src="@Episode.StillFullPath" Width="300" Height="169" />
            <MudStack Spacing="0" Class="pa-4">
                <MudText Typo="Typo.h6" Class="mt-n2">@Episode</MudText>
                <MudText Style="opacity:0.6">@Episode.LocalizedOverview</MudText>
            </MudStack>
        </MudStack>
    </MudPaper>
</MudLink>

@code
{
    [Parameter]
    public TvShow TvShow { get; set; }

    [Parameter]
    public TvEpisode Episode { get; set; }
}
