<MudLink Underline="Underline.None" Href="@($"tv/{TvShow.Id}/season/{Episode.SeasonNumber}/episode/{Episode.EpisodeNumber}")">
    <MudCard Class="episode-card" Elevation="3">
        <MudImage Class="rounded-t episode-card-img" Src="@Episode.StillFullPath" />
        <MudCardContent Class="media-card-content media-card-rating">
            <RatingCircular Value="@Episode.VoteAverage"></RatingCircular>
            <MudText Typo="Typo.h5" >@Episode</MudText>
            <MudText Typo="Typo.h6" >@Episode.LocalizedOverview</MudText>
        </MudCardContent>
    </MudCard>
</MudLink>

@code
{
    [Parameter]
    public TvShow TvShow { get; set; }

    [Parameter]
    public TvEpisode Episode { get; set; }
}
