<MudStack Spacing="1">
    @if(MediaItems != null)
    {
        foreach(SearchBase item in MediaItems)
        {
            <MudTooltip Class="pa-2" Color="Color.Warning" Delay="1000" Arrow="true" Placement="Placement.Left">
                <ChildContent>
                    <MudLink Underline="Underline.Hover" Color="Color.Default" Href="@item.Link">
                        <MudText Typo="Typo.body2">@item</MudText>
                    </MudLink>
                </ChildContent>
                <TooltipContent>
                    <MediaCard Media="item" />
                </TooltipContent>
            </MudTooltip>
        }
    }
</MudStack>

@code
{
    [Parameter]
    public List<SearchBase> MediaItems { get; set; }
}