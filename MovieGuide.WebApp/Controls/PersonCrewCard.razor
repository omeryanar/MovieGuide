<MudLink Underline="Underline.None" Href="@("person/" + Crew.Id)">
    <MudCard Class="person-card" Elevation="3">
        <MudImage Class="rounded-t person-card-img" Src="@Crew.ProfileFullPath" ObjectFit="ObjectFit.Cover" ObjectPosition="ObjectPosition.Top" />
        <MudCardContent Class="pt-0 px-2">
            <MudText Typo="Typo.h5">@Crew.Name</MudText>
            <MudText Typo="Typo.h6">@Crew.Job</MudText>
        </MudCardContent>
    </MudCard>
</MudLink>

@code
{
    [Parameter]
    public Crew Crew { get; set; }
}
