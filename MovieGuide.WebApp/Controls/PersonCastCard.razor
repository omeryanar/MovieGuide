<MudLink Underline="Underline.None" Href="@("person/" + Cast.Id)">
    <MudCard Class="person-card" Elevation="3">
        <MudImage Class="rounded-t person-card-img" Src="@Cast.ProfileFullPath" ObjectFit="ObjectFit.Cover" ObjectPosition="ObjectPosition.Top" />
        <MudCardContent Class="pa-2">
            <MudText Typo="Typo.h5">@Cast.Name</MudText>
            <MudText Typo="Typo.h6">@Cast.Character</MudText>
        </MudCardContent>
    </MudCard>
</MudLink>

@code
{
    [Parameter]
    public Cast Cast { get; set; }
}
