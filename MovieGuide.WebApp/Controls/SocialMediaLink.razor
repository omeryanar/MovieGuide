<MudLink Disabled="@disabled" Underline="Underline.None" Target="_blank" Href="@link">
    <MudImage Class="@(disabled ? "social-icon disabled-icon" : "social-icon")" Src="@icon" Alt="" />
</MudLink>

@code {

    [Parameter]
    public string Id { get; set; }

    [Parameter]
    public SocialMediaType SocialMedia { get; set; }

    protected override void OnParametersSet()
    {
        disabled = String.IsNullOrEmpty(Id);

        switch (SocialMedia)
        {
            case SocialMediaType.ImdbName:
                link = $"{Constants.ImdbName}{Id}";
                icon = "images/imdb.svg";
                alt = "IMDb";
                break;

            case SocialMediaType.ImdbTitle:
                link = $"{Constants.ImdbTitle}{Id}";
                icon = "images/imdb.svg";
                alt = "IMDb";
                break;

            case SocialMediaType.Twitter:
                link = $"{Constants.Twitter}{Id}";
                icon = "images/twitter.svg";
                alt = "Twitter";
                break;

            case SocialMediaType.Facebook:
                link = $"{Constants.FaceBook}{Id}";
                icon = "images/facebook.svg";
                alt = "Facebook";
                break;

            case SocialMediaType.Instagram:
                link = $"{Constants.Instagram}{Id}";
                icon = "images/instagram.svg";
                alt = "Instagram";
                break;

            case SocialMediaType.Youtube:
                link = String.Format(Constants.YoutubeVideo, Id);
                icon = "images/youtube.svg";
                alt = "YouTube";
                break;
        }
    }

    private bool disabled = false;

    private string link;

    private string icon;

    private string alt;

}
