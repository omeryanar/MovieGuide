@page "/list/{Id:int}"
@inherits BasePaginatedPage

<PageTitle>Movie Guide - @Title</PageTitle>

<LoadingContent LoadingObject="@Items">
    <MudStack Justify="Justify.Center">
        <MudText Class="ma-auto" Typo="Typo.h1">@Title</MudText>
        <MudPagination Class="ma-auto" Color="Color.Primary" BoundaryCount="1" Count="PageCount" @bind-Selected="Page" />
        <MudStack Class="flex-wrap" Row="true" Justify="Justify.Center">
            @if (Items != null)
            {
                foreach (SearchMovieTvBase item in Items.Results)
                {
                    <MediaCard Media="item" />
                }
            }
        </MudStack>
    </MudStack>
</LoadingContent>