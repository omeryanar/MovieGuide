@page "/person/popular"
@inherits BasePaginatedPage

<PageTitle>Movie Guide - @Resources.PopularPeople</PageTitle>

<LoadingContent LoadingObject="@People">
    <MudStack Justify="Justify.Center">
        <MudText Class="ma-auto" Typo="Typo.h1">@Resources.PopularPeople</MudText>
        <MudPagination Class="@(PageCount > 1 ? "ma-auto" : "invisible")" Color="Color.Primary" BoundaryCount="1" Count="PageCount" @bind-Selected="Page" />
        <MudStack Class="flex-wrap" Row="true" Justify="Justify.Center">
            @if (People != null)
            {
                foreach (SearchPerson person in People.Results)
                {
                    <MediaCard Media="person" />
                }
            }
        </MudStack>
        <MudPagination Class="@(PageCount > 1 ? "ma-auto" : "invisible")" Color="Color.Primary" BoundaryCount="1" Count="PageCount" @bind-Selected="Page" />
    </MudStack>
</LoadingContent>


