@page "/person/{Id:int}"

<LoadingContent LoadingObject="Person">
    <PageTitle>Movie Guide - @Person.Name</PageTitle>
    <MudStack Class="flex-wrap" Row="true">
        <MediaViewer MediaUrl="@(String.Format(Constants.Original, Person.ProfilePath))">
            <MudImage Class="rounded-lg detail-img" Src="@Person.ProfileFullPath" />
        </MediaViewer>
        <MudStack Class="detail-info">
            <MudText Typo="Typo.h1">@Person.Name</MudText>
            <MudStack Class="flex-wrap" Row="true" Spacing="4">
                <LabeledItem Label="@Resources.PlaceOfBirth" Text="@Person.PlaceOfBirth" />
                <LabeledItem Label="@Resources.Birthday" Text="@(Person.Birthday == null ? "" : $"{Person.Birthday?.ToString("MMM d, yyyy")} ({Person.Sign})")" />
                <LabeledItem Label="@Resources.Deathday" Text="@Person.Deathday?.ToString("MMM d, yyyy")" />
            </MudStack>
            <MudStack Class="ml-n1" Row="true" Spacing="1">
                <SocialMediaLink SocialMedia="SocialMediaType.ImdbName" Id="@Person.ImdbId" />
                <SocialMediaLink SocialMedia="SocialMediaType.Twitter" Id="@Person.ExternalIds?.TwitterId" />
                <SocialMediaLink SocialMedia="SocialMediaType.Facebook" Id="@Person.ExternalIds?.FacebookId" />
                <SocialMediaLink SocialMedia="SocialMediaType.Instagram" Id="@Person.ExternalIds?.InstagramId" />
            </MudStack>
            <MudElement Class="d-none d-sm-flex">
                <LabeledItem Label="@Resources.Biography" Text="@Person.LocalizedBiography" />
            </MudElement>
        </MudStack>
        <MudElement Class="d-sm-none">
            <LabeledItem Label="@Resources.Biography" Text="@Person.LocalizedBiography" />
        </MudElement>
    </MudStack>
    <MudStack Class="mt-4">
        <ExpansionPanel Title="@Resources.KnownFor" Items="Person.KnownFor" Expanded="true">
            <MediaCard Media="context" />
        </ExpansionPanel>
        <MudPaper Elevation="1">
            <MudNavGroup Title="@Resources.Movies">
                <MudDivider />
                <MudDataGrid Class="px-4" Items="Person.KnownMovieCredits" Dense="true" Hover="true" SortMode="SortMode.Single" Virtualize="true" Height="400px" QuickFilter="movieFilter">
                    <ToolBarContent>
                        <MudSpacer />
                        <MudTextField Class="mt-0" @bind-Value="movieSearchString" Placeholder="@Resources.Search" Adornment="Adornment.Start" Immediate="true" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"></MudTextField>
                    </ToolBarContent>
                    <Columns>
                        <TemplateColumn SortBy="x => x.Title" Title="@Resources.Title">
                            <CellTemplate>
                                <MudLink Underline="Underline.Hover" Color="Color.Default" Typo="Typo.body2" Href="@("movie/" + context.Item.Id)">
                                    <MudHighlighter Text="@context.Item.Title" HighlightedText="@movieSearchString" />
                                </MudLink>
                            </CellTemplate>
                        </TemplateColumn>
                        <TemplateColumn SortBy="x => x.Job" Title="@Resources.JobRole">
                            <CellTemplate>
                                <MudHighlighter Text="@context.Item.Job" HighlightedText="@movieSearchString" />
                            </CellTemplate>
                        </TemplateColumn>
                        <TemplateColumn SortBy="x => x.Department" Title="@Resources.Department" HideSmall="true">
                            <CellTemplate>
                                <MudText Typo="Typo.body2">@context.Item.Department</MudText>
                            </CellTemplate>
                        </TemplateColumn>                        
                        <TemplateColumn SortBy="x => x.ReleaseDate" Title="@Resources.ReleaseDate" HideSmall="true" InitialDirection="SortDirection.Descending">
                            <CellTemplate>
                                <MudText Typo="Typo.body2">@context.Item.ReleaseDate?.ToString("MMM d, yyyy")</MudText>
                            </CellTemplate>
                        </TemplateColumn>
                    </Columns>
                </MudDataGrid>
            </MudNavGroup>
        </MudPaper>
        <MudPaper Elevation="1">
            <MudNavGroup Title="@Resources.TvShows">
                <MudDivider />
                <MudDataGrid Class="px-4" Items="Person.KnownTvCredits" Dense="true" Hover="true" SortMode="SortMode.Single" Virtualize="true" Height="400px" QuickFilter="tvShowFilter">
                    <ToolBarContent>
                        <MudSpacer />
                        <MudTextField Class="mt-0" @bind-Value="tvShowSearchString" Placeholder="@Resources.Search" Adornment="Adornment.Start" Immediate="true" AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium"></MudTextField>
                    </ToolBarContent>
                    <Columns>
                        <TemplateColumn SortBy="x => x.Name" Title="@Resources.Name">
                            <CellTemplate>
                                <MudLink Underline="Underline.Hover" Color="Color.Default" Typo="Typo.body2" Href="@("tv/" + context.Item.Id)">
                                    <MudHighlighter Text="@context.Item.Name" HighlightedText="@tvShowSearchString" />
                                </MudLink>
                            </CellTemplate>
                        </TemplateColumn>
                        <TemplateColumn SortBy="x => x.Job" Title="@Resources.JobRole">
                            <CellTemplate>
                                <MudHighlighter Text="@context.Item.Job" HighlightedText="@tvShowSearchString" />
                            </CellTemplate>
                        </TemplateColumn>
                        <TemplateColumn SortBy="x => x.Department" Title="@Resources.Department" HideSmall="true">
                            <CellTemplate>
                                <MudText Typo="Typo.body2">@context.Item.Department</MudText>
                            </CellTemplate>
                        </TemplateColumn>                        
                        <TemplateColumn SortBy="x => x.FirstAirDate" Title="@Resources.FirstAirDate" HideSmall="true" InitialDirection="SortDirection.Descending">
                            <CellTemplate>
                                <MudText Typo="Typo.body2">@context.Item.FirstAirDate?.ToString("MMM d, yyyy")</MudText>
                            </CellTemplate>
                        </TemplateColumn>
                    </Columns>
                </MudDataGrid>
            </MudNavGroup>
        </MudPaper>
        <ExpansionPanel Title="@Resources.Profiles" Items="Person.Images?.Profiles" OverlayClass="narrow-window">
            <ChildContent>
                <MudImage Width="185" Height="278" Src="@(String.Format(Constants.W185, context.FilePath))" />
            </ChildContent>
            <OverlayContent>
                <MudStack Justify="Justify.Center" AlignItems="AlignItems.Center">
                    <MudImage Class="fullscreen" Src="@(String.Format(Constants.Original, context.FilePath))" />
                </MudStack>
            </OverlayContent>
        </ExpansionPanel>
    </MudStack>
</LoadingContent>