@page "/search"
@inherits BasePaginatedPage

<PageTitle>Movie Guide - @Resources.Search: @Query</PageTitle>

<LoadingContent LoadingObject="@Search">
    <MudStack Justify="Justify.Center">
        <MudText Class="ma-auto" Typo="Typo.h1">@Resources.Search: @Query</MudText>
        <MudPagination Class="ma-auto" Color="Color.Primary" BoundaryCount="1" Count="PageCount" @bind-Selected="Page" />
        <MudStack Class="flex-wrap" Row="true" Justify="Justify.Center">
            @if (Search != null)
            {
                foreach (SearchBase result in Search.Results)
                {
                    <MediaCard Media="result" />
                }
            }
        </MudStack>
    </MudStack>
</LoadingContent>
