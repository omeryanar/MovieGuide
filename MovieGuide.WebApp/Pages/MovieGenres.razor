@page "/genre/movie"

<PageTitle>Movie Guide - @Resources.MovieGenres</PageTitle>

<MudStack Justify="Justify.Center">
    <MudText Class="ma-auto" Typo="Typo.h1">@Resources.MovieGenres</MudText>
    <MudStack Class="flex-wrap" Row="true" Justify="Justify.Center">
        @foreach(Genre genre in GenreHelper.MovieGenres)
        {
            <MudLink Underline="Underline.None" Color="Color.Default" Href="@($"discover/movie?with_genres={genre.Id}")" >
                <MudCard Class="genre-card" Elevation="3">
                    <MudImage Class="rounded-t genre-card-img" Src="@($"genre/movie/{genre.Name}.jpg")" />
                    <MudCardContent>
                        <MudText Typo="Typo.h3">@genre</MudText>
                    </MudCardContent>
                </MudCard>
            </MudLink>
        }
    </MudStack>
</MudStack>
